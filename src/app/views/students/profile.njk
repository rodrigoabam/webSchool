{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="foto"
    style="background: url({{ student.photo }}) no-repeat center center / cover"
    ></section>
    <section class="ficha">
        <h2>Professor</h2>
        <div class="item">
            <div>Nome</div>
            <div>{{ student.name }}</div>
        </div>
        <div class="item">
            <div>E-mail</div>
            <div>{{ student.email }}</div>
        </div>
        <div class="item">
            <div>Aniversário</div>
            <div>{{ student.birth }}</div>
        </div>
        <div class="item">
            <div>Ano escolar</div>
            <div>{{ student.grade }}</div>
        </div>
        <div class="item">
            <div>Carga horária</div>
            <div>{{ student.workload }} h</div>
        </div>

        <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
    </section>
</div>
{% endblock %}
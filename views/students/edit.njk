{% extends "layout.njk" %}

{% block content %}
<div class="card">

    <section class="foto"
    style="background: url({{student.photo}}) no-repeat center center / cover"
    ></section>

    <section class="ficha-cadastro">
        <form method="POST" action="/students?_method=PUT">

        <h2>Alterar dados</h2>

        {% include 'students/fields.njk' %}

        <input type="hidden" name="id" value={{student.id}}>
        
        </form>

        <form id="form-delete" action="/students?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{student.id}}>
            <button type="submit">Deletar</button>
        </form>

    </section>
</div>

{% include '../delConfirm.njk' %}

{% endblock %}
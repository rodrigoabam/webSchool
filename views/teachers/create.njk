{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
    <section class="foto"
    style="background: url(https://source.unsplash.com/collection/10356769/500x500) no-repeat center center / cover"
    ></section>
    <section class="ficha-cadastro">
        <h2>Ficha cadastral</h2>
          <div class="item">
            <input type="url" name="photo" required>
            <label>Foto</label>
        </div>
        <div class="item">
            <input type="text" name="name" required>
            <label>Nome</label>
        </div>
        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>
        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="scholarity">
                    <option value="medio" selected>Ensino Médio Completo</option>
                    <option value="superior">Ensino Superior Completo</option>
                    <option value="mestre">Mestrado</option>
                    <option value="doutor">Doutorado</option>
                </select>
            </div>
        </div>
        <div class="item">
            <div>Modelo de aula</div>
            <div>
                <span><input type="radio" name="type_class" value="P" checked>Presencial</span>
                <span><input type="radio" name="type_class" value="D">EAD (distancia)</span>
            </div>
        </div>
        <div class="item">
            <input type="text" name="matters" required>
            <label>Matérias ministradas</label>
        </div>

        <button type="submit">Cadastrar</button>
    </section>
</form>
{% endblock %}
{% extends "layout.njk" %}

{% block content %}
<div class="card">

    <section class="foto"
    style="background: url(https://source.unsplash.com/collection/10356769/500x500) no-repeat center center / cover"
    ></section>

    <section class="ficha-cadastro">
        <form method="POST" action="/teachers?_method=PUT">

        <h2>Alterar dados</h2>

        {% include 'teachers/fields.njk' %}

        <input type="hidden" name="id" value={{teacher.id}}>
        
        </form>

        <form id="form-delete" action="/teachers?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{teacher.id}}>
            <button type="submit">Deletar</button>
        </form>

    </section>
</div>
{% endblock %}